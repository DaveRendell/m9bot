{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src/"],
      "test": ["test/"]
    },
    "resolveJsonModule": true
  },
  "include":[
    "src/**/*",
    "test/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
