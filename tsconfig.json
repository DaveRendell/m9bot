{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "emitDecoratorMetadata": true
  },
  "include":[
    "src/**/*",
  ]
}
